@model Article

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Author">Author</label>
        <div><span asp-validation-for="Author" class="text-danger"></span></div>
        <input asp-for="Author" class="form-control" id="exampleFormControlInput1">
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Text">Text</label>
        <div><span asp-validation-for="Text" class="text-danger"></span></div>
        <textarea asp-for="Text" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Category">Category</label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <input asp-for="Category" class="form-control">
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>