@model IEnumerable<Article>


<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <td>Name</td>
        <td class="text-right">Author</td>
        <td class="text-center">Category</td>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td class="text-right">@item.Id</td>
            <td>@item.Name</td> 
            <td class="text-right">@item.Author</td> 
            <td class="text-right">@item.Category</td> 
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-articleId="@item.Id">
                    Edit
                    </a>
                    <input type="hidden" name="ArticleID" value="@item.Id" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Article</a>
</div>